<% provide(:title, @user.name) %>
<div class= "row">
  <aside class= col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= "Name: #{@user.name}" %>
      </h1>
      <h2>
        <br><%= "Email: #{@user.email}" %>
        <br><%= "Created at: #{@user.created_at}" %>
        <br><%= "The time is: #{Time.now}" %>
      </h2>
    </section>
  </aside>
</div>